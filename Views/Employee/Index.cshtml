@model IEnumerable<EmployeeIndexViewModel>
@{
    ViewBag.Title = "Employee";
}

<div class="row">
    <div class="col-md-12 grid-margin">
        <div class="card">
            <div class="card-body">
                <nav aria-label="breadcrumb" lev>
                    <ol class="breadcrumb">
                        <li class="breadcrumb-item">
                            <a asp-controller="Home" asp-action="Index">
                                Home
                            </a>
                        </li>
                        <li class="breadcrumb-item" active aria-current="page">
                                Employee List
                        </li>
                    </ol>
                </nav>
                <br/><br/>
                <div class="row">
                    <div class="col-md-12 table-responsive-md">
                        <a class="btn btn-xs btn-outline-success float-md-right" 
                        asp-controller="Employee" asp-action="Create">Create Employee</a>
                        <table class="table table-striped">
                            <thead>
                                <tr>
                                    <th>Employee No.</th>
                                    <th>Name.</th>
                                    <th>Gender</th>
                                    <th>Role</th>
                                    <th>City</th>
                                    <th>Date Joined</th>
                                    <th class="text-warning">Actions</th>
                                </tr>
                            </thead>
                            <tbody>
                                @{
                                    foreach(var item in Model)
                                    {
                                        <tr>
                                        <td>@item.EmployeeNo</td>
                                        <td>@item.FullName</td>
                                        <td>@item.Gender</td>
                                        <td>@item.Role</td>
                                        <td>@item.City</td>
                                        <td>@item.DateJoined.ToString("yyyy-MM-dd")</td>
                                            <td>
                                                <a class="text-primary" asp-action="Edit" asp-route-id="@item.Id">
                                                    <i class="fas fa-edit"></i>Edit
                                                </a>
                                                <a class="text-primary" asp-action="Detail" asp-route-id="@item.Id">
                                                    <i class="fas fa-bars"></i>Detail
                                                </a>
                                                <a class="text-primary" asp-action="Delete" asp-route-id="@item.Id">
                                                    <i class="fas fa-trash-alt"></i>Delete
                                                </a>
                                            </td>
                                        </tr>
                                    }
                                }
                            </tbody>
                        </table>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>